{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2018",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2018"],
    "rootDir": "./src",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}
